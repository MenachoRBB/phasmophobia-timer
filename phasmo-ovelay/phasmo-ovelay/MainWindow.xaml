<Window x:Class="phasmo_ovelay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cronometro" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent" 
        Topmost="True" 
        ResizeMode="NoResize" 
        ShowInTaskbar="True"
        Width="200" 
        Height="100">
    <Grid>
        <!-- Texto del cronómetro centrado -->
        <TextBlock x:Name="CronoText" Text="00:00" FontSize="48" 
                   Foreground="White" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" Margin="0,10,0,0"/>
    </Grid>
</Window>
